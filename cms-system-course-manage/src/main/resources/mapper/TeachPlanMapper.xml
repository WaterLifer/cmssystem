<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuyunedu.sky.dao.CourseBaseMapper">

    <resultMap id="courseBaseResultMap" type="com.jiuyunedu.sky.course.CourseBase">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="users" column="users" />
        <result property="mt" column="mt" />
        <result property="grade" column="grade" />
        <result property="studymodel" column="studymodel" />
        <result property="teachmode" column="teachmode" />
        <result property="description" column="description" />
        <result property="st" column="st" />
        <result property="status" column="status" />
        <result property="companyId" column="company_id" />
        <result property="userId" column="user_id" />
        <association property="coursePic" javaType="com.jiuyunedu.sky.course.CoursePic">
            <id column="courseId" property="courseid" />
            <result column="pic" property="pic" />
        </association>
    </resultMap>

    <select id="selectCourseBaseByPage" resultMap="courseBaseResultMap">
        select
            c.id,
            c.name,
            c.users,
            c.mt,
            c.grade,
            c.studymodel,
            c.teachmode,
            c.description,
            c.st,
            c.status,
            c.company_id,
            c.user_id,
            p.courseid,
            p.pic
        from
            course_base c
        left join course_pic p
        on c.id = p.courseid
    </select>
    
</mapper>